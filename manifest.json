{
  "name": "FormMemory",
  "version": "0.1",
  "manifest_version": 2,
  "description": "フォームに入力したデータをJSONで取得できます。また、JSONやPOSTデータを指定して、フォームを自動で埋めることができます。",

  "icons": {
    "16": "img/logo.png",
    "48": "img/logo.png",
    "128": "img/logo.png"
  },

  "background": {
    "scripts": [
      "js/jquery-2.1.3.min.js", "js/background.js"
    ]
  },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "js/jquery-2.1.3.min.js", "js/ecl.js", "js/content-script.js"] // 依存するライブラリを先に記載する必要がある
    }
  ],

  "browser_action": {
    "default_icon": "img/logo.png",
    "default_title": "FormMemory",
    "default_popup": "popup.html"
  },

  "commands": {
    "historyBack": {
      "suggested_key": {
        "default": "Ctrl+Up"
      },
      "description": "前の履歴"
    },
    "historyForward": {
      "suggested_key": {
        "default": "Ctrl+Down"
      },
      "description": "次の履歴"
    }
  },

  "permissions": [
    "<all_urls>", "tabs", "webRequest", "webRequestBlocking"
  ]
}
